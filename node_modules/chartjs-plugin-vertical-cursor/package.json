{
  "name": "chartjs-plugin-vertical-cursor",
  "version": "0.1.1",
  "description": "A vertical cursor line for Chart.js v4",
  "license": "MIT",
  "repository": "github:yourname/chartjs-plugin-vertical-cursor",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chart.js",
    "chartjs",
    "plugin",
    "cursor"
  ],
  "peerDependencies": {
    "chart.js": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc --emitDeclarationOnly && rollup -c",
    "dev": "vite demo",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm test"
  }
}
